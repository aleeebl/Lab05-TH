<Window x:Class="Lab05.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab05"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Orientation="Horizontal" Margin="10">
            <Button Content="Listar" Width="100" Height="26" Click="Button_Click"/>
            <DataGrid x:Name="Gridclientes" ItemsSource="{Binding Collection}" AutoGenerateColumns="True" Margin="10" Width="600"/>
        </StackPanel>
    </Grid>
</Window>
